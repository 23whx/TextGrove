---
import Header from '@/components/Header';
import SettingsContent from '@/components/SettingsContent';
import SEO from '@/components/SEO';
import '@/styles/global.css';
---

<html lang="zh-CN">
  <head>
    <meta charset="utf-8" />
    <SEO 
      title="设置 - TextGrove 文本工具站"
      description="管理 TextGrove 的停用词、数据和个性化设置。所有设置保存在本地浏览器中，不会上传到服务器。"
      canonical="/settings"
      noindex={true}
      lang="zh-CN"
    />
  </head>
  <body class="min-h-screen bg-[var(--bg)] text-gray-800">
    <Header client:load />

    <main class="mx-auto max-w-4xl px-4 py-12">
      <SettingsContent client:load />
    </main>

    <footer class="py-10 text-center text-sm text-gray-500">
      © 2025 TextGrove
    </footer>
  </body>
</html>

